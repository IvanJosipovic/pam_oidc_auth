{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "timezone": "America/Vancouver",
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "assignees": [
    "@ivanjosipovic"
  ],
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "ignorePaths": [
    "**/docs/**",
    "**/charts/**"
  ],
  "schedule": [
    "before 4am"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "semanticCommitType": "fix",
      "matchFileNames": [
        "src/**",
        "global.json"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchFileNames": [
        "tests/**",
        "benchmarks/**"
      ]
    }
  ]
}
